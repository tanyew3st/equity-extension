{
    "name": "MDB-Stockify",
    "version": "3.4",
    "description": "Chrome Extension for MongoDB Stock Price",
    "content_scripts": [{
        "matches": ["https://www.mongodb.com/", "https://www.mongodb.com/atlas/*"],
        "js": ["scripts/content.js", "scripts/main.js", "scripts/confetti.js"]
    }],
    "permissions": ["storage", "tabs", "scripting"],  
    "action": {   
        "default_icon": "Images/red_icon.png",
        "default_popup" : "basic.html"
    },    
    "manifest_version": 3
}