{
    "name": "Stockify",
    "version": "2.0",
    "description": "Build an Extension!",
    "background": {
        "service_worker": "scripts/background.js",
        "type": "module"
      },
    "content_scripts": [{
        "matches": ["https://www.mongodb.com/*"],
        "js": ["scripts/content.js", "scripts/main.js", "scripts/confetti.js"]
    }],
    "permissions": ["storage", "tabs", "scripting"],  
    "action": {   
        "default_icon": "Images/mongodblogo(5).png",
        "default_popup" : "basic.html"
    },    
    "manifest_version": 3
}