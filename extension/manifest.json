{
    "name": "Stockify",
    "version": "2.0",
    "description": "Build an Extension!",
    "background": {
        "service_worker": "scripts/background.js",
        "type": "module"
      },
    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": ["scripts/content.js", "scripts/main.js"]
    }],
    "permissions": ["storage", "delcarativeContent", "tabs", "scripting"],  
    "host_permissions": ["storage", "delcarativeContent", "tabs", "scripting"],  
    "action": {   
        "default_popup" : "basic.html"
    },    
    "manifest_version": 3
}