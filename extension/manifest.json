{
    "name": "Stockify",
    "version": "1.0",
    "description": "Build an Extension!",
    "background": {
      "scripts": ["scripts/background.js", "scripts/main.js", "scripts/sample.js", "scripts/content.js", "color.js"],
      "persistent": true
    },
    "content_scripts": [{
        "matches": ["*://*/*"],
        "js": ["scripts/content.js"]
    }],
    "permissions": ["storage"],  
    "browser_action": {   
        "default_popup" : "basic.html"
    },    
    "manifest_version": 2
}